<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<%- include('partials/header') %>
<div class="container">
    <section class="perfilUsuario">
        <div class="row perfil principal">

            <div class="titulo col-12">
                <h2>
                    <%= title %>
                </h2>
            </div>

            <div class="contenido text-left">

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item " role="presentation">
                        <a class="nav-link <%= activeDetail %> " id="home-tab" data-toggle="tab" href="#detalle"
                            role="tab" aria-controls="home" aria-selected="true">Detalle del Producto</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link <%= activeEdit %>" id="profile-tab" data-toggle="tab" href="#editar"
                            role="tab" aria-controls="detalle" aria-selected="false">Editar Producto</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade <%= showDetail %> <%= activeDetail %> " id="detalle" role="tabpanel"
                        aria-labelledby="profile-tab">

                        <div class="row p-3">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-1">
                                        <% if (producto.id>1) { %>
                                        <a href="/products/show/<%- producto.id-1 %>/show " class="text-warning"><i
                                                class="fas fa-chevron-circle-left"></i></a>
                                        <% } %>
                                    </div>
                                    <div class="col-10">
                                        <h3 class="text-center">
                                            <%= producto.name %>
                                        </h3>
                                    </div>
                                    <div class="col-1">
                                        <% if (producto.id < total) { %>
                                        <a href="/products/show/<%- producto.id+1 %>/show " class="text-warning"><i
                                                class="fas fa-chevron-circle-right"></i></a>

                                        <% } %>
                                    </div>
                                </div>


                            </div>
                            <div class="col-12 col-md-4 mt-3">
                                <figure class="text-center">
                                    <img src="/images/Productos/<%= producto.image %> " alt="" class="img-fluid">
                                </figure>
                            </div>
                            <div class="col-12 col-md-8 mt-3">
                                <h6>Description:</h6>
                                <p><%= producto.description %></p>
                                <div class="row">
                                    <div class="col-12 col-lg-4">
                                        <h6>Categoría: <%= producto.categoria %></h6>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <h6>Marca: <%= producto.marca %></h6>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <h6>Subcategoría:<%= producto.subcategoria.name %></h6>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <h6>Precio: $<%=producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%></h6>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <h6>Peso: <%=producto.peso%>kg%</h6>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <h6>Descuento: <%=producto.discount%>%</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--            ***********************************************
                                            VENTANA DE EDICION
                                    ***********************************************-->
                    <div class="tab-pane fade <%= showEdit %> <%= activeEdit %>" id="editar" role="tabpanel"
                        aria-labelledby="home-tab">
                        <form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST">
                            <div class="row p-3">
                                <div class="form-group col-6">
                                    <h6>Nombre:</h6>
                                    <input class="form-control" type="text" value="<%= producto.name%>" name="name">
                                </div>
                                <div class="form-group col-6">
                                    <h6>Marca:</h6>
                                    <input class="form-control" type="text" value="<%= producto.marca%>" name="marca">
                                </div>
                                <div class="col-12 col-md-4 col-xl-4 mt-3">
                                    <figure class="text-center">
                                        <img src="/images/productos/<%= producto.image %> " alt="" class="img-fluid">
                                    </figure>
                                    <input type="file" class="form-control" name="image">
                                </div>
                                <div class="form-group col-12 col-md-8 col-xl-8 mt-3">
                                    <h6>Desceipción:</h6>
                                    <textarea class="form-control" rows="7" name="description"
                                        id=""><%= producto.description %></textarea>
                                    <p>
                                    </p>
                                    <div class="row">
                                        <div class="form-group col-12 col-lg-4">
                                            <!--modificado desde aca-->
                                            <h6>Categoria: </h6>
                                            <!--        APERTURA
                                                MUESTRO LO QUE TIENE ASIGNADO EN LA CATEGORIA Y LUEGO MUESTRO PARA QUE PUEDA SELECCIONAR LA OTRA OPCION, SI ES QUE LA QUIERE CAMBIAR-->
                                            <select name="categoria" id="" class="form-control">
                                                <% if(producto.categoria =="Gato"){%>
                                                        <option value="<%= producto.categoria %>" selected>
                                                        <%= producto.categoria %></option>
                                                        <option value="<%= producto.categoria %>">Perro</option> 
                                                <% }else if(producto.categoria =="Perro"){ %>
                                                    <option value="<%= producto.categoria %>" selected>
                                                    <%= producto.categoria %></option>
                                                    <option value="<%= producto.categoria %>" >Gato</option>                                                                       
                                                    <% } %>
                                            </select><!--           CIERRE              -->
                                        </div>
                                        <div class="form-group col-12 col-lg-4">
                                            <!--                 APERTURA
                                                MUESTRO LAS OPCION QUE ESTA SELECCIONADO DE LA subcategoria
                                            -->
                                            <h6>Subcategoria: </h6>
                                            <select name="id_subcategoria" id="" class="form-control">
                                                <option value="<%= producto.subcategoria.id %>"> <%= producto.subcategoria.name %></option>
                                                <% idCategorias.forEach(element => {%>
                                                    <% if(element.name != producto.subcategoria.name) {%>
                                                    <option value="<%= element.id %>"> <%= element.name %></option>
                                                    <% } %>
                                                <%}); %>                                            
                                            </select>
                                            <!--            CIERRE          -->
                                        </div>
                                        <div class="form-group col-6 col-lg-4">
                                            <h6>Precio:</h6>
                                            <div class="input-group mb-2 mr-sm-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">$</div>
                                                </div>
                                                
                                                <input type="text" class="form-control" value="<%=producto.price%>"
                                                    name="price">
                                            </div>
                                        </div>
                                        <div class="form-group col-6 col-lg-3">
                                            <h6>Peso:</h6>
                                            <div class="input-group mb-2 mr-sm-2">
                                                <input type="text" class="form-control" value="<%=producto.peso%>"
                                                    name="peso">
                                            </div>
                                        </div>
                                        <div class="col-6 col-lg-3">
                                            <h6>Descuento:</h6>
                                            <div class="input-group mb-2 mr-sm-2">
                                                
                                                <input type="text" class="form-control" value="<%=producto.discount%>"
                                                    name="discount">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">%</div>
                                                </div>
                                            </div>
                                            </span>
                                        </div>
                                        <div class="col-12 d-flex justify-content-end">
                                            <a href="/users/profile"><button class="btn btn-danger mr-2"
                                                    type="button">Cancelar</button></a>                                            
                                            <button class="btn btn-info" type="submit" name="id">Guardar</button> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>
</div>




<%- include('partials/footer') %>