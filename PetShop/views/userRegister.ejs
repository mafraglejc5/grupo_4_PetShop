<%- include('partials/head')  %>


<%- include('partials/header')  %>

<div class="container">
	<section class="sectionRegister">
		<div class="row principal">
			<div class="titulo col-12">

				<h2 class="registroUsuario"><%= title %></h2>

			</div>
			<div class="col-12">
				<div class="contenido">
					<div class="row py-3 px-5">
						<div class="col-12 col-md-5 col-lg-6 col-xl-4 d-flex flex-column justify-content-center">
							<figure>
								<img id="vistaPrevia" src="" alt="" class="w-75" />
							</figure>
						</div>
						<div class="col-12 col-md-7 col-lg-6 col-xl-8 ">
							<form action="" method="POST" enctype="multipart/form-data" id="register">
								<div class="form-row">

									<div class="form-group col-12 col-xl-6">
										<label for="nombre"></label>
										<input type="text"
											class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>"
											id="nombre" name="nombre"
											value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>"
											placeholder="nombre" />
										<small class="text-danger bg-dark"
											id="errorNombre"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %>
										</small>
									</div>

									<div class="form-group col-12 col-xl-6">
										<label for="apellido"></label>
										<input type="text"
											class="form-control <%= (typeof old != 'undefined' && old.apellido)?"is-valid":(typeof errors != 'undefined' && errors.apellido)?"is-invalid": ""  %>"
											id="apellido"
											value="<%= (typeof old != 'undefined' && old.apellido)?old.apellido:'' %>"
											placeholder="apellido" name="apellido" />
										<small class="text-danger bg-dark"
											id="errorApellido"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %>
										</small>
									</div>

								</div>

								<div class="form-row">
									<div class="form-group col-12 col-xl-6">
										<label for="pass"></label>
										<input type="password"
											class="form-control <%= (typeof errors != 'undefined' && errors.pass)?"is-invalid": ""  %>"
											id="pass" placeholder="contraseña" name="pass" />
										<small class="text-danger bg-dark"
											id="errorPass"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %>
										</small>
									</div>

									<div class="form-group col-12 col-xl-6">
										<label for="pass2"></label>
										<input type="password"
											class="form-control <%= (typeof errors != 'undefined' && errors.pass2)?"is-invalid": ""  %>"
											id="pass2" placeholder="reingresar contraseña" name="pass2" />
										<small class="text-danger bg-dark"
											id="errorPass2"><%= (typeof errors != 'undefined' && errors.pass2)?errors.pass2.msg: "" %>
										</small>

									</div>

								</div>
								<div class="form-row">
									<div class="form-group col-12 col-xl-6">
										<label for="email"></label>
										<input type="email"
											class="form-control <%= (typeof old != 'undefined' && old.email && !errors.email)?"is-valid":(typeof errors != 'undefined' && errors.email)?"is-invalid": ""  %>"
											id="email"
											value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>"
											placeholder="email" name="email" />
										<small class="text-danger bg-dark"
											id="errorEmail"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %>
										</small>
									</div>

									<div class="form-group col-12 col-xl-6">
										<div class="custom-file mt-4">
											<input type="file" class="custom-file-input " id="customFileLang" lang="es"
												name="avatar">
											<label class="custom-file-label" for="customFileLang">Seleccionar
												Archivo</label>
											<small class="text-danger bg-dark"
												id="errorFoto"><%= (typeof errorFormato != 'undefined')?errorFormato: "" %>
											</small>
										</div>
									</div>

								</div>
								<div class="form-row">
									<div class="col-12 col-lg-6 mt-2">
										<div class="custom-control custom-checkbox">
											<input type="checkbox"
												class="custom-control-input <%= (typeof old != 'undefined' && old.bases)?"is-valid":(typeof errors != 'undefined' && errors.bases)?"is-invalid": ""  %>"
												id="bases" name="bases">
											<label class="custom-control-label" for="bases">acepto las bases y
												condiciones</label><br>
											<a href="" class="text-info" data-toggle="modal"
												data-target="#exampleModalCenter">ver bases y condiciones</a><br>

											<small class="text-danger bg-dark"
												id="errorBases"><%= (typeof errors != 'undefined' && errors.bases)?errors.bases.msg: "" %>
											</small>
										</div>
									</div>
									<div class="col-12 col-lg-6 mt-2">
										<span id="msgError" class="text-danger bg-dark"></span>
										<button type="submit" class="btn btn-primary btn-registrarse">
											Registrarse
										</button>
									</div>

								</div>
							</form>
						</div>

						<!--APERTURA Modal BASESyCONDICIONES-->
						<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
							aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLongTitle">Bases y condiciones</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										...
									</div>
									<div class="modal-footer">
										<input type="button" class="btn btn-secondary"
											data-dismiss="modal">Cerrar</input>
									</div>
								</div>
							</div>
						</div>
						<!--CIERRE Modal BASESyCONDICIONES-->
					</div>
				</div>
			</div>
		</div>
</div>
</section>
</div>

<%- include('partials/footer') %>
</body>

</html>