<!--EMERGENTE LOGIN-->
<%- include('./partials/head.ejs')%>
<div class="row">
    <div class="col-10 col-md-12 col-lg-12 emergentelog">
        <div class="modal fade" id="ventana5">
            <div class="modal-dialog">
                <div class="modal-content">


                    <!--contenido de la ventana emergente LOGIN-->
                    <div class="container">
                        <div class="form__top">
                            <h2>Formulario <span>Registro</span></h2>
                        </div>
                        <form class="form__reg" action="">
                            <input class="input" type="text" placeholder="&#128100;  Nombre" required autofocus>
                            <input class="input" type="email" placeholder="&#9993;  Email" required>
                            <input class="input" type="text" placeholder="&#128222;  Telefono" required>
                            <input class="input" type="text" placeholder="&#8962;  Dirección" required>
                            <div class="btn__form">
                                <input class="btn__submit" type="submit" value="REGISTRAR">
                                <input class="btn__reset" type="reset" value="LIMPIAR">
                            </div>
                        </form>
                    </div>

                    <!--footer de la ventana emergente LOGIN -->
                    <div class="modal-footer footerRegistro">
                        <button type="button" class="btn bt-cerrar btn-primary btn-lg"
                            data-dismiss="modal">Cerrar</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- TERMINA EMERGENTE LOGIN-->
<!--EMERGENTE REG-->

<div class="col-10 col-md-12 col-lg-12 emergentesreg">
    <div class="modal fade" id="ventana6">
        <div class="modal-dialog">
            <div class="modal-content">


                <!--contenido de la ventana emergente REG-->
                <div class="login__container">
                    <div class="login__top">
                        <img class="login__img" src="./img/pokemoneda.png" alt="">
                        <h3 class="login__title">Formulario de <span>Ingreso</span></h3>
                    </div>

                    <form class="login__form">
                        <input type="text" placeholder="&#128100; Usuario" required autofocus>
                        <input type="password" placeholder="&#x1F512; Contraseña" required>
                        <input class="btn__submit" type="submit" value="ENTRAR">
                        <a class="form__recover" href="">Olvidaste la contraseña?</a>
                    </form>
                </div>

                <!--footer de la ventana emergente REG -->
                <div class="modal-footer footerRegistro">
                    <button type="button" class="btn bt-cerrar btn-primary btn-lg" data-dismiss="modal">Cerrar</button>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- TERMINA EMERGENTE REG-->
<!--EMPIEZA VENTANA EMERGENTE CARRITO DE COMPRAS-->
<div class="modal fade" id="ventana7">
    <div class="modal-dialog">
        <div class="modal-content">
            <!--header de la ventana-->
            <div class="modal-header">
                <h3 class="modal-titulo">Tu <span class="span-header">Carrito</span></h3>
            </div>
            <!--contenido de la ventana-->
            <div call="modal-body">

                <body class="bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-2>
                              <h4 class=" d-flex justify-content-between mb-3">
                                </h4>
                                <img class="imagen-producto" src="/images/Marcas/img-sieger.png"
                                    alt="Sieger criadores 20kg">
                            </div>
                            <div class="col-5">
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div class="descripcion-producto">
                                        <h6 class="my-0">Sleger Criadores 20kg</h6>
                                        <small class="text-muted">Comida balanceada para perro</small>
                                    </div>

                                </li>
                            </div>
                            <div class="col-3">
                                <div class="list-group-item d-flex justify-content-between">
                                    <span>Total $3.087</span>
                                    <div class="btn-carrito">
                                        <button class="btn-minus btn-success " width="20px">-</button><span class="valorCant"
                                            value="1">1</span>
                                        <button class="btn-plus btn-success">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--footer de la ventana-->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar
                                carrito</button>
                            <button type="button" class="btn btn-primary">Finalizar compra</button>
                        </div>
                    </div>

                </body>
            </div>
        </div>
    </div>
</div>