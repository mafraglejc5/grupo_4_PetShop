<header class="container-fluid">
  <div class="container">
    <!--FILA 1 - logotipo, buscador, usuario-->
    <div class="row">
      <!--fila-->
      <div class="col-12 col-md-2 logo">
        <a href="/"><img src="/images/Logo-PetShop.png"  alt="CatDog" title="CatDog"></a>
      </div>
      <!--CIERRE LOGO-->
      <div class="col-12 col-md-6 buscador">
        <form action="/products/search" method="GET">
          <input type="text" name="search" id="search" placeholder="Buscar productos...">
          <button type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>
      <div class="col-12 col-md-4 menuUsuario">
        <nav class="navbar-expand-md">
          <!--boton para que desplegar el menu  en caso que el viewport sea tamaño movil-->
          <button class="navbar-toggler burger" type="button" data-toggle="collapse"
            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
          </button>

          <!--barra de menu que aparece a partir de la vesión de tablet-->

          
          <% if (typeof user != "undefined") { %>
          <a class="usuarioLogo" href="/users/profile">
            <h5 class="mr-2"><%= locals.user.nick%> </h5>
          </a>
          <a class="usuarioLogo" href="/users/profile"><img src="/images/users/<%= locals.user.avatar %> " alt="avatar" width="50px"
              height="50px" class="avatar"></a>
          <% } else{%>
          <a class="usuarioLogoInvitado" href="/users/login">Invitado <img src="/images/users/default.png" alt="" width="50px" height="50px"></a>
          <% } %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!--barra de menu izquierdo-->
            <ul class="navbar-nav mr-auto usuario">
              <!--INVITADO-->
              <% if(typeof user == "undefined") { %>
              <li class="nav-item active">
                <a href="/users/register">Registrate<i class="far fa-address-card"></i></a>
              </li>
              <li class="nav-item active">
                <a href="/users/login">Ingresá <i class="fas fa-address-book"></i></a>
              </li>
              <li>
                <a href="#comoComprar">¿Cómo comprar con envíos?</a>
              </li>
              <!--ADMINISTRADOR-->
              <% }else if(locals.user.rol == 'admin'){ %>
              <li class="nav-item active">
                <a href="/users/profile">Perfil <i class="fas fa-sign-in-alt "></i></a>
              </li>
              <li class="nav-item active">
                <a href="/users/logout">Cerrar sesión <i class="fas fa-sign-in-alt "></i></a>
              </li>
              <li>
                <a href="/products/productAdd">Cargar Productos</a>
              </li>
              <li>
                <a href="/products">Editar/Eliminar productos</a>
              </li>
              <!--USUARIO-->
              <% }else { %>
              <li class="nav-item active">
                <a href="/users/profile">Perfil <i class="fas fa-sign-in-alt "></i></a>
              </li>
              <li class="nav-item active">
                <a href="/users/logout">Cerrar sesión <i class="fas fa-sign-in-alt "></i></a>
              </li>
              <li class="nav-item active">
                <a href="/products/productCart">Mis compras <i class="fas fa-cart-arrow-down"></i></a>
              </li>
              <li>
                <a href="#comoComprar">¿Cómo comprar con envíos?</a>
              </li>
              <% } %>
            </ul>
          </div>
          <!--finaliza caja contenedora del menu-->
        </nav>
      </div>
    </div>

